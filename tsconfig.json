{
  "compilerOptions": {
    "module": "ES2022",
    "outDir": "./lib",
    "allowJs": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": false
  },
  "include": ["./src/**/*"]
}
